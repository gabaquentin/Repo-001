{% extends '/frontend/eservices/base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}

    <div class="shop-wrapper has-background-image">

        <!-- Search overlay -->
        <div class="search-overlay"></div>

        <!-- Search input -->
        <div class="search-input-wrapper is-desktop is-hidden">
            <div class="field">
                <div class="control">
                    <input id="nephos-search" type="text" name="search" placeholder="Search a Product">
                    <span id="clear-search" role="button"><i data-feather="x"></i></span>
                    <span class="bar"></span>
                </div>
                <span class="search-help">Type the name of the product you are looking for</span>
            </div>
        </div>
        <!-- Background Caption -->
        <div class="background-caption">
            <h1>E-SERVICES</h1>
        </div>

        <!-- Hero Caption -->
        <div class="hero-caption">
            <h1 style="color:white;">E-SERVICES</h1>
            <h2 style="color:white;">Trouvez la main d'oeuvre qu'il vous faut
            </h2>
            <a href="{{path("services_accueil")}}" class="button big-button primary-button upper-button rounded raised">Entrer</a>
        </div>

        <!-- Fullscreen Slick SLider -->
        <div class="slider-wrapper">
            <div class="fullscreen-slick">
                <div class="full-slide has-background-image" data-background="{{asset('frontend/img/eservices/2020-6-24-domesticworker-lebanon.jpg')}}" data-demo-background="{{ asset('frontend/img/eservices/unnamed.jpg') }}"></div>
                <div class="full-slide has-background-image" data-background="{{asset('frontend/img/eservices/1537095169887.811.jpeg')}}" data-demo-background="{{ asset('frontend/img/eservices/unnamed.jpg') }}"></div>
                <div class="full-slide has-background-image" data-background="{{asset('frontend/img/eservices/shutterstock_326404853_tcm1061-233292.jpg')}}" data-demo-background="{{ asset('frontend/img/eservices/unnamed.jpg') }}"></div>
                <div class="full-slide has-background-image" data-background="{{asset('frontend/img/eservices/7-steps-to-choosing-a-moving-company.jpg')}}" data-demo-background="{{ asset('frontend/img/eservices/unnamed.jpg') }}"></div>
            </div>
        </div>
    </div>


{% endblock %}