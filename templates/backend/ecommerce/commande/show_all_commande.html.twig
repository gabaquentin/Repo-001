{% extends "backend/base/base.html.twig" %}

{% block stylesheets %}

{% endblock %}

{% block title %} Orders {% endblock %}
{% block block_starter %} Commandes {% endblock %}
{% block body %}

    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <h4 class="header-title">Commandes</h4>
                <p class="sub-header">
                    Gestions des Commandes
                </p>

                <div class="mb-2">
                    <div class="row">
                        <div class="col-12 text-sm-center form-inline">
                            <div class="form-group mr-2">
                                <select id="demo-foo-filter-status" class="custom-select custom-select-sm">
                                    <option value="">Tout</option>
                                    <option value="Livré">Livré</option>
                                    <option value="En Attente">En Attente</option>
                                    <option value="En cours de Livraiso">En cours de Livraison</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input id="demo-foo-search" type="text" placeholder="Search" class="form-control form-control-sm" autocomplete="on">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="demo-foo-filtering" class="table table-bordered toggle-circle mb-0" data-page-size="7" data-orders="{{ orders }}">
                        <thead>
                        <tr>
                            <th></th>
                            <th>#</th>
                            <th data-toggle="true">Numéro</th>
                            <th>Client</th>
                            <th >Livreur</th>
                            <th  data-hide="phone, tablet" >Mode de Paiement</th>
                            <th  data-hide="phone, tablet" >Mode d Livraison</th>
                            <th   data-hide="phone, tablet" >Status</th>
                            <th  data-hide="phone, tablet" >Actions</th>
                        </tr>
                        </thead>
                        <tbody class="order-list">

                        </tbody>
                        <tfoot>
                        <tr class="active">
                            <td colspan="9">
                                <div class="text-right">
                                    <ul class="pagination pagination-rounded justify-content-end footable-pagination m-t-10 mb-0"></ul>
                                </div>
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div> <!-- end .table-responsive-->
            </div> <!-- end card-box -->
        </div> <!-- end col -->
    </div>

{% endblock %}

{% block javascripts %}
    <!-- Footable js -->
    <script src="{{ asset('backend/libs/footable/footable.all.min.js') }}"></script>

    <!-- Init js -->
    <script src="{{ asset('backend/js/pages/foo-tables.init.js') }}"></script>

    <!-- Sweet alert init js-->
    <script src="{{ asset('backend/js/pages/sweet-alerts.init.js') }}"></script>

    <script src="{{ asset('backend/js/pages/ecommerce/commande.js') }}"></script>
{% endblock %}