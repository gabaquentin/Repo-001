<div class="form-group row">
    <label class="col-sm-3 col-form-label" ></label>
    <div class="col-sm-9">
        <div class="custom-control custom-checkbox">
            {{ form_widget(form.meuble, {'attr': {'class': 'custom-control-input'}}) }}
            <label class="custom-control-label" for="{{ form.meuble.vars.id }}">Meublé ?</label>
        </div>
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-3 col-form-label" for="{{ form.dureeSejour.vars.id }}">Durée du Séjour</label>
    <div class="col-sm-9">
        {{ form_widget(form.dureeSejour, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-3"><label for="">Caracteristiques </label></div>
    <div class="col-sm-9 mt-lg-4">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label" for="{{ form.caracteristique.nbreChambres.vars.id }}">Nombre de Chambres</label>
            <div class="col-sm-9">
                {{ form_widget(form.caracteristique.nbreChambres, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label" for="{{ form.caracteristique.nbreSalleBain.vars.id }}">Nombre de salles de bain</label>
            <div class="col-sm-9">
                {{ form_widget(form.caracteristique.nbreSalleBain, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label" for="{{ form.caracteristique.nbreParking.vars.id }}">Nombre de parking</label>
            <div class="col-sm-9">
                {{ form_widget(form.caracteristique.nbreParking, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
</div>