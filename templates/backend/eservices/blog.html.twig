{% extends "backend/base/base.html.twig" %}

{% block stylesheets %}
    <!-- Plugins css -->
    <link href="{{ asset('backend/libs/nestable2/jquery.nestable.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('backend/css/pages/eservices/categorie.css') }}" rel="stylesheet" />
{% endblock %}

{% block block_starter %} Gestion des Blogs {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-lg-8">
                        <form class="form-inline">
                            <div class="form-group">
                                <label for="inputPassword2" class="sr-only">Rechercher</label>
                                <input type="search" class="form-control" id="inputPassword2" placeholder="rechercher...">
                            </div>
                            <div class="form-group mx-sm-3">
                                <label for="status-select" class="mr-2">Tri par</label>
                                <select class="custom-select" id="status-select">
                                    <option selected="">Tout</option>
                                    <option value="1">Nom</option>
                                    <option value="2">Description</option>
                                    <option value="3">Nombre de sous-catégorie</option>
                                    <option value="4">Nombre de services</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-4">
                        <div class="text-lg-right mt-3 mt-lg-0">
                            <a href="" class="btn btn-success waves-effect waves-light" data-animation="fadein" data-overlayColor="#38414a"><i class="mdi mdi-plus-circle mr-1"></i> Nouvelle catégorie</a>
                        </div>
                    </div><!-- end col-->
                </div> <!-- end row -->
            </div> <!-- end card-box -->
        </div><!-- end col-->
    </div>
    <!-- end row -->
    <div class="row">
        {% for blog in blogs %}
            <div class="card-box col-lg-6">
                <div class="card-box">
                    <h4 class="header-title">{{ blog.nom }}</h4>
                    <p class="sub-header">{{ blog.courteDescription }}</p>

                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid" src="{{ asset('images/blog/'~blog.image) }}"
                                     alt="First slide" height="500px" width="400px">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <a href="{{ path('back_single_blog',{'id':blog.id}) }}" class="btn btn-sm btn-secondary">Voir plus d'infos</a>
                </div>
            </div>
        {% endfor %}

        <div class="card-box col-auto mx-3 categorie">
            <a href=""  data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">
                <div class="card-box">
                    <h4 class="header-title">Nouveau</h4>
                    <p class="sub-header">Ajouter un nouveau blog</p>

                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid"
                                     src="{{ asset('backend/images/pages/eservices/img-add.png') }}" alt="First slide">
                            </div>
                        </div>
                    </div>
                </div>
            </a>

        </div>
    </div>
    <div class="pagination">
        {{ knp_pagination_render(blogs) }}
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Ajouter un Blog</h4>
                        <p class="sub-header"></p>
                        {{ form_start(form) }}
                            <div class="fallback">
                                {{ form_row(form.image, {'label': ''}) }}
                            </div>

                            <div class="dz-message needsclick">
                                <p class="h1 text-muted"><i class="mdi mdi-cloud-upload"></i></p>
                                <h3>Déposez votre champs ici.</h3>
                            </div>
                            <div class="form-group mb-3">
                                <label for="validationCustom01">Titre du blog</label>
                                {{ form_row(form.nom, {'label': ' '}) }}
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="validationCustom02">Courte description</label>
                                {{ form_row(form.courte_description, {'label': ' '}) }}
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label for="validationCustomUsername">Longue description</label>
                                <div class="input-group">
                                    {{ form_row(form.grande_description, {'label': ' '}) }}
                                </div>
                            </div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" id="btn-save-category" class="btn btn-primary waves-effect waves-lightspinner-border-sm">
                                <span class="spinner-border-sm" role="status" aria-hidden="true"></span>
                                Sauvegarder
                            </button>
                        {{ form_end(form) }}
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('#exampleModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var recipient = button.data('whatever') // Extract info from data-* attributes
            // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $(this)
            modal.find('.modal-title').text('New message to ' + recipient)
            modal.find('.modal-body input').val(recipient)
        })
    </script>
{% endblock %}

