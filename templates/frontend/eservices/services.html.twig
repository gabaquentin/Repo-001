{% extends "/frontend/eservices/base.html.twig" %}

{% block title %}{{ categorie.nom~' - Services' }}{% endblock %}

{% block body %}
    <!-- Main wrapper -->
    <div class="shop-wrapper">

        <!-- Search overlay -->
        <div class="search-overlay"></div>

        <!-- Search input -->
        <div class="search-input-wrapper is-desktop is-hidden">
            <div class="field">
                <div class="control">
                    <input id="nephos-search" type="text" name="search" placeholder="Search a Product">
                    <span id="clear-search" role="button"><i data-feather="x"></i></span>
                    <span class="bar"></span>
                </div>
                <span class="search-help">saisir le nom du service que vous recherchez</span>
            </div>
        </div>
        <!-- Main section -->
        <div id="shop-grid" class="section">
            <!-- Container -->
            <div class="container">

                <!-- House products -->
                <div class="columns category-header">
                    <div class="column main-column is-tablet-landscape-padded">
                        <!-- Title -->
                        <div class="category-title is-product-category">
                            <h2>{{ categorie.nom }}</h2>
                        </div>

                        <!-- Controls -->
                        <div class="listing-controls">
                            <div class="layout-controls">
                                <a href="#"><span class="is-active"><i data-feather="grid"></i></span></a>
                            </div>
                            <!-- Sort -->
                            <div class="sort-box">
                                <div class="sort-box-select">
                                    <select data-placeholder="Default order" class="chosen-select-no-single">
                                        <option>les plus demandés</option>
                                        <option>Les mieux notés</option>
                                        <option>nouveaux services</option>
                                        <option>de A à Z</option>
                                        <option>de Z à A</option>
                                        <option>prix moyen croissant</option>
                                        <option>prix moyen décroissant</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- /Controls -->

                        <!-- Product grid -->
                        <div class="columns is-product-grid is-multiline">
                            {% for s in services %}
                            <!-- service -->
                            <div class="column is-3">
                                <div class="flat-card product-container" data-product-id="1" data-product-category="House">
                                    <!-- Product zoomable image -->
                                    <div class="image">
                                        <img src="{{ asset('images/services/'~s.img) }}" data-demo-src="assets/img/products/red-seat.png" alt="">
                                    </div>
                                    <!-- Product meta -->
                                    <div class="product-info has-text-centered">
                                        <a href="{{ path('detail_service_front', {'service':s.id}) }}">
                                            <h3 class="product-name">{{ s.nom }}</h3>
                                        </a>
                                        <p class="product-description">{{ s.description }}</p>
                                    </div>
                                    <!-- Product actions -->
                                    <div class="actions">
                                        <div class="like modal-trigger" data-modal="add-to-wishlist-modal">
                                            <i data-feather="heart" class="has-simple-popover" data-content="Add to Wishlist" data-placement="top"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <!-- /Product grid -->

                        <div class="show-more"><a href="#">afficher plus de services</a></div>

                    </div>
                </div>
                <!-- /House products -->
            </div>
            <!-- /Container -->
        </div>
        <!-- /Main section -->
    </div>
    <!-- /Main wrapper -->
{% endblock %}